
project openbus/assistant/demos ;

path-constant here : . ;

obj greetings-idl : $(here)/idl/greetings.idl /mico//mico ;

exe greetings_client
 : client/client.cpp /openbus//openbus
   /mico//mico /scs//scs /boost//headers /logger//logger
   /openbus//core-idls /openssl//openssl greetings-idl
   /openbus/assistant//assistant
 : <implicit-dependency>/openbus//core-idls
   <threading>multi:<source>/boost//thread <include>tests
   <implicit-dependency>$(idl)
   <link>static,<target-os>linux:<source>/dl//dl
   <implicit-dependency>greetings-idl
   <target-os>windows,<link>shared:<source>/openbus//core-idls
   <target-os>windows,<link>shared:<source>/scs//idls
 ;
exe greetings_server
 : server/server.cpp /openbus//openbus /boost//program_options
   /mico//mico /scs//scs /boost//headers /logger//logger
   /openbus//core-idls /openssl//openssl greetings-idl
   /openbus/assistant//assistant
 : <implicit-dependency>/openbus//core-idls
   <threading>multi:<source>/boost//thread <include>tests
   <implicit-dependency>$(idl)
   <link>static,<target-os>linux:<source>/dl//dl
   <implicit-dependency>greetings-idl
   <target-os>windows,<link>shared:<source>/openbus//core-idls
   <target-os>windows,<link>shared:<source>/scs//idls
 ;

alias greetings : greetings_client greetings_server ;

