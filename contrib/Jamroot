
import mico-idl ;

path-constant bin : ../bin ;
path-constant lib : ../lib ;

using mico-idl : $(bin)/mico-st : $(lib)/mico-st : stubs ;

project openbus ;

lib openbus : : <name>openbus-mico <search>../lib
 <threading>single <link>shared <variant>release
 : : <include>../include/openbus/cpp
 ;

lib openbus : : <name>openbus-mico-d <search>../lib
 <threading>single <link>shared <variant>debug
 : : <include>../include/openbus/cpp
 ;

