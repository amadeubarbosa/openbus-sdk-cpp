 <threading>single <link>static <variant>release
 : : <include>../include/openbus/cpp
 ;

lib openbus : : <name>openbus-mico-s-d <search>../lib
 <threading>single <link>static <variant>debug
 : : <include>../include/openbus/cpp
 ;

lib openbus : : <name>openbus-mico-mt <search>../lib
 <threading>multi <link>shared <variant>release
 : : <include>../include/openbus/cpp
 ;

lib openbus : : <name>openbus-mico-mt-d <search>../lib
 <threading>multi <link>shared <variant>debug
 : : <include>../include/openbus/cpp
 ;

lib openbus : : <name>openbus-mico-mt-s <search>../lib
 <threading>multi <link>static <variant>release
 : : <include>../include/openbus/cpp
 ;

lib openbus : : <name>openbus-mico-mt-s-d <search>../lib
 <threading>multi <link>static <variant>debug
 : : <include>../include/openbus/cpp
 ;

alias core-idls : : : : <include>../include/openbus/cpp
 <include>../include/openbus/cpp/stubs
 ;

