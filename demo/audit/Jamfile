
project openbus/demo/audit ;

path-constant demo-hello : ../hello ;

obj hello-idl
  : $(demo-hello)/idl/hello.idl
    /mico//mico
  ;
explicit hello-idl ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /mico//mico
      /openssl//openssl
      /boost//headers
      /boost//program_options
      $(deps)
    : <implicit-dependency>/openbus//core-idls
      <threading>multi:<source>/boost//thread
      <link>static,<target-os>linux:<source>/dl//dl
      <implicit-dependency>$(deps)
    ;
  explicit $(name) ;
}

demo-exe audit_client : client : hello-idl ;
demo-exe audit_server : server : hello-idl ;
demo-exe audit_proxy : proxy : hello-idl ;

alias audit
  : audit_client
    audit_server
    audit_proxy
;
