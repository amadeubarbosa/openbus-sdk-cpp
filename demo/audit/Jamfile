
project openbus/demo/audit ;

path-constant demo-hello : ../hello ;

obj hello-stub
  : $(demo-hello)/idl/hello.idl
  : <warnings>off
  ;
explicit hello-stub ;

obj hello-skeleton
  : $(demo-hello)/idl/hello.idl
  : <generate>skeleton
    <warnings>off
  ;
explicit hello-skeleton ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /openssl//openssl
      /boost//headers
      /boost//program_options
      /TAO//TAO
      $(deps)
    : <threading>multi:<source>/boost//thread
      <target-os>windows:<library>/openbus//idls
      <target-os>windows:<library>/scs//scs-stub
      <dependency>hello-stub
      <implicit-dependency>hello-stub
      <link>static,<target-os>linux:<source>/dl//dl
      <include>../../
    ;
  explicit $(name) ;
}

demo-exe audit_client
  : client
  : hello-stub
  ;
  
demo-exe audit_server
  : server
  : hello-stub
    hello-skeleton
  ;
  
demo-exe audit_proxy
  : proxy
  : hello-stub
    hello-skeleton
  ;

alias audit
  : audit_client
    audit_server
    audit_proxy
    admin/DemoCppHello.key
  ;
