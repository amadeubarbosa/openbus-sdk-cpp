
project openbus/demos ;

path-constant demo-hello : ../hello ;

obj hello-idl : $(demo-hello)/idl/hello.idl /mico//mico ;

exe audit_client
 : client/client.cpp /openbus//openbus /boost//program_options
   /mico//mico /scs//scs /boost//headers /logger//logger
   /openssl//openssl hello-idl
 : <implicit-dependency>/openbus//core-idls
   <threading>multi:<source>/boost//thread <include>tests
   <link>static,<target-os>linux:<source>/dl//dl
   <implicit-dependency>hello-idl
 ;
exe audit_server
 : server/server.cpp /openbus//openbus /boost//program_options
   /mico//mico /scs//scs /boost//headers /logger//logger
   /openssl//openssl hello-idl
 : <implicit-dependency>/openbus//core-idls
   <threading>multi:<source>/boost//thread <include>tests
   <link>static,<target-os>linux:<source>/dl//dl
   <implicit-dependency>hello-idl
 ;

exe audit_proxy
 : proxy/proxy.cpp /openbus//openbus /boost//program_options
   /mico//mico /scs//scs /boost//headers /logger//logger
   /openssl//openssl hello-idl
 : <implicit-dependency>/openbus//core-idls
   <threading>multi:<source>/boost//thread <include>tests
   <link>static,<target-os>linux:<source>/dl//dl
   <implicit-dependency>hello-idl
 ;

alias audit : audit_client audit_server audit_proxy ;

