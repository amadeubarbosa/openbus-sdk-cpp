
project openbus/demos/chain_validation ;

path-constant here : . ;

obj chain_validation-stub
  : $(here)/idl/chain_validation.idl
  : <warnings>off
  ;
explicit chain_validation-stub ;

obj chain_validation-skeleton
  : $(here)/idl/chain_validation.idl
  : <generate>skeleton
    <warnings>off
  ;
explicit chain_validation-skeleton ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /openssl//openssl
      /boost//program_options
      /TAO//TAO
      $(deps)
    : <threading>multi:<source>/boost//thread
      <target-os>windows:<library>/openbus//idls
      <target-os>windows:<library>/scs//scs-stub
      <dependency>$(deps)
      <implicit-dependency>$(deps)
      <link>static,<target-os>linux:<source>/dl//dl
      <include>../..
      <use>/boost//headers
    ;
  explicit $(name) ;
}

demo-exe chain_validation_client
  : client
  : chain_validation-stub
  ;
  
demo-exe chain_validation_executive
  : executive
  : chain_validation-stub
    chain_validation-skeleton
  ;
  
demo-exe chain_validation_secretary
  : secretary
  : chain_validation-stub
    chain_validation-skeleton
  ;

alias chain_validation
  : chain_validation_client
    chain_validation_executive
    chain_validation_secretary
    admin/DemoCppChainValidation.key
  ;
