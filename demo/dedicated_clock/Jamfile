project openbus/demos/dedicated_clock ;

path-constant here : . ;

obj dedicated_clock-idl
  : $(here)/idl/dedicated_clock.idl
    /mico//mico
  ;
explicit dedicated_clock-idl ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /mico//mico
      /openssl//openssl
      /boost//headers
      /boost//program_options
      $(deps)
    : <implicit-dependency>/openbus//core-idls
      <threading>multi:<source>/boost//thread
      <link>static,<target-os>linux:<source>/dl//dl
      <implicit-dependency>$(deps)
    ;
  explicit $(name) ;
}

demo-exe dedicated_clock_client : client : dedicated_clock-idl ;
demo-exe dedicated_clock_server : server : dedicated_clock-idl ;

alias dedicated_clock
  : dedicated_clock_client
    dedicated_clock_server
  ;
