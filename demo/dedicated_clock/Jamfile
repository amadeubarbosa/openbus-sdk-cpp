project openbus/demo/dedicated_clock ;

path-constant here : . ;

obj dedicated_clock-stub
  : $(here)/idl/dedicated_clock.idl
  ;
explicit dedicated_clock-stub ;

obj dedicated_clock-skeleton
  : $(here)/idl/dedicated_clock.idl
  : <generate>skeleton
  ;
explicit dedicated_clock-skeleton ;

exe dedicated_clock_client
 : src/client.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   dedicated_clock-stub
 : <threading>multi:<source>/boost//thread
   <dependency>dedicated_clock-stub
   <implicit-dependency>dedicated_clock-stub
   <link>static,<target-os>linux:<source>/dl//dl
   
 ;
explicit dedicated_clock_client ;

exe dedicated_clock_server
 : src/server.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   dedicated_clock-stub
   dedicated_clock-skeleton
 : <threading>multi:<source>/boost//thread
   <dependency>dedicated_clock-stub
   <implicit-dependency>dedicated_clock-stub
   <dependency>dedicated_clock-skeleton
   <implicit-dependency>dedicated_clock-skeleton
   <link>static,<target-os>linux:<source>/dl//dl   
 ;
explicit dedicated_clock_server ;

alias dedicated_clock
  : dedicated_clock_client
    dedicated_clock_server
  ;
