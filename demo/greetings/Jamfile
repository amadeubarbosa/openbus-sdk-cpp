project openbus/demos/greetings ;

path-constant here : . ;

obj greetings-idl
  : $(here)/idl/greetings.idl
    /mico//mico
  ;
explicit greetings-idl ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /mico//mico
      /openssl//openssl
      /boost//headers
      /boost//program_options
      $(deps)
    : <implicit-dependency>/openbus//core-idls
      <threading>multi:<source>/boost//thread
      <link>static,<target-os>linux:<source>/dl//dl
      <implicit-dependency>$(deps)
    ;
  explicit $(name) ;
}

demo-exe greetings_client : client : greetings-idl ;
demo-exe greetings_server : server : greetings-idl ;

alias greetings
  : greetings_client
    greetings_server
  ;
