project openbus/demo/greetings ;

path-constant here : . ;

obj greetings-stub
  : $(here)/idl/greetings.idl
  ;
explicit greetings-stub ;

obj greetings-skeleton
  : $(here)/idl/greetings.idl
  : <generate>skeleton
  ;
explicit greetings-skeleton ;

exe greetings_client
 : src/client.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   greetings-stub
 : <threading>multi:<source>/boost//thread
   <dependency>greetings-stub
   <implicit-dependency>greetings-stub
   <link>static,<target-os>linux:<source>/dl//dl
   
 ;
explicit greetings_client ;

exe greetings_server
 : src/server.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   greetings-stub
   greetings-skeleton
 : <threading>multi:<source>/boost//thread
   <dependency>greetings-stub
   <implicit-dependency>greetings-stub
   <dependency>greetings-skeleton
   <implicit-dependency>greetings-skeleton
   <link>static,<target-os>linux:<source>/dl//dl   
 ;
explicit greetings_server ;

alias greetings
  : greetings_client
    greetings_server
  ;
