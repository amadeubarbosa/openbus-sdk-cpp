project openbus/demos/hello ;

path-constant here : . ;

obj hello-stub
  : $(here)/idl/hello.idl
  ;
explicit hello-stub ;

obj hello-skeleton
  : $(here)/idl/hello.idl
  : <generate>skeleton
  ;
explicit hello-skeleton ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /openssl//openssl
      /boost//headers
      /boost//program_options
      /TAO//TAO
      $(deps)
    : <threading>multi:<source>/boost//thread
      <target-os>windows:<library>/openbus//idls
      <target-os>windows:<library>/scs//scs-stub
      <dependency>$(deps)
      <implicit-dependency>$(deps)
      <link>static,<target-os>linux:<source>/dl//dl
      <include>../..
    ;
  explicit $(name) ;
}

demo-exe hello_client
  : client
  : hello-stub
  ;
  
demo-exe hello_server
  : server
  : hello-stub
    hello-skeleton
  ;

alias hello
  : hello_client
    hello_server
    admin/DemoCppHello.key
  ;
