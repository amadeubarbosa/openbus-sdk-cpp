project openbus/demos/independent_clock ;

path-constant here : . ;

obj independent_clock-stub
  : $(here)/idl/independent_clock.idl
  : <warnings>off
  ;
explicit independent_clock-stub ;

obj independent_clock-skeleton
  : $(here)/idl/independent_clock.idl
  : <generate>skeleton
    <warnings>off
  ;
explicit independent_clock-skeleton ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /openssl//openssl
      /boost//program_options
      /TAO//TAO
      $(deps)
    : <threading>multi:<source>/boost//thread
      <target-os>windows:<library>/openbus//idls
      <target-os>windows:<library>/scs//scs-stub
      <dependency>$(deps)
      <implicit-dependency>$(deps)
      <link>static,<target-os>linux:<source>/dl//dl
      <include>../..
      <use>/boost//headers
    ;
  explicit $(name) ;
}

demo-exe independent_clock_client
  : client
  : independent_clock-stub
  ;
  
demo-exe independent_clock_server
  : server
  : independent_clock-stub
    independent_clock-skeleton
  ;

alias independent_clock
  : independent_clock_client
    independent_clock_server
    admin/DemoCppIndependentClock.key
  ;
