project openbus/demo/multiplexing ;

path-constant here : . ;

obj greetings_clock-stub
  : $(here)/idl/greetings.idl
  ;
explicit greetings_clock-stub ;

obj greetings_clock-skeleton
  : $(here)/idl/greetings.idl
  : <generate>skeleton
  ;
explicit greetings_clock-skeleton ;

exe multiplexing_client
 : src/client.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   greetings_clock-stub
 : <threading>multi:<source>/boost//thread
   <dependency>greetings_clock-stub
   <implicit-dependency>greetings_clock-stub
   <link>static,<target-os>linux:<source>/dl//dl
   
 ;
explicit multiplexing_client ;

exe multiplexing_server
 : src/server.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   greetings_clock-stub
   greetings_clock-skeleton
 : <threading>multi:<source>/boost//thread
   <dependency>greetings_clock-stub
   <implicit-dependency>greetings_clock-stub
   <dependency>greetings_clock-skeleton
   <implicit-dependency>greetings_clock-skeleton
   <link>static,<target-os>linux:<source>/dl//dl   
 ;
explicit multiplexing_server ;

alias multiplexing
  : multiplexing_client
    multiplexing_server
  ;
