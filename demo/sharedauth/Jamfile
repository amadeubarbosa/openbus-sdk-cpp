project openbus/demos/sharedauth ;

path-constant here : . ;

obj hello-stub
  : $(here)/idl/hello.idl
  ;
explicit hello-stub ;

obj hello-skeleton
  : $(here)/idl/hello.idl
  : <generate>skeleton
  ;
explicit hello-skeleton ;

local rule demo-exe ( name : src : deps * )
{
  exe $(name)
    : src/$(src).cpp
      /openbus//openbus
      /scs//scs
      /logger//logger
      /openssl//openssl
      /boost//headers
      /boost//program_options
      $(deps)
    : <threading>multi:<source>/boost//thread
      <target-os>windows:<library>/openbus//idls
      <target-os>windows:<library>/scs//scs-stub
      <dependency>$(deps)
      <implicit-dependency>$(deps)
      <link>static,<target-os>linux:<source>/dl//dl
    ;
  explicit $(name) ;
}

demo-exe sharedauth_client
  : client
  : hello-stub
  ;
  
demo-exe sharedauth_sharedauth
  : sharedauth
  : hello-stub
  ;
  
demo-exe sharedauth_server
  : server
  : hello-stub
    hello-skeleton
    ;

alias sharedauth
  : sharedauth_client
    sharedauth_sharedauth
    sharedauth_server
    admin/DemoCppHello.key
  ;
