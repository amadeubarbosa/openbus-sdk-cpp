project openbus/interop/sharedauth ;

path-constant here : . ;

obj hello-stub
  : $(here)/idl/hello.idl
  ;
explicit hello-stub ;

obj hello-skeleton
  : $(here)/idl/hello.idl
  : <generate>skeleton
  ;
explicit hello-skeleton ;

obj sharedauth-stub
  : $(here)/idl/sharedauth.idl
  ;
explicit sharedauth-stub ;

exe sharedauth_client
 : src/client.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   hello-stub
   sharedauth-stub
 : <threading>multi:<source>/boost//thread
   <dependency>hello-stub
   <implicit-dependency>hello-stub
   <dependency>sharedauth-stub
   <implicit-dependency>sharedauth-stub
   <link>static,<target-os>linux:<source>/dl//dl
   
 ;
explicit sharedauth_client ;

exe sharedauth_client-sharedauth
 : src/client_sharedauth.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   hello-stub
   sharedauth-stub
 : <threading>multi:<source>/boost//thread
   <dependency>hello-stub
   <implicit-dependency>hello-stub
   <dependency>sharedauth-stub
   <implicit-dependency>sharedauth-stub
   <link>static,<target-os>linux:<source>/dl//dl   
 ;
explicit sharedauth_client-sharedauth ;

exe sharedauth_server
 : src/server.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   hello-stub
   hello-skeleton
   sharedauth-stub
 : <threading>multi:<source>/boost//thread
   <dependency>hello-stub
   <implicit-dependency>hello-stub
   <dependency>hello-skeleton
   <implicit-dependency>hello-skeleton
   <dependency>sharedauth-stub
   <implicit-dependency>sharedauth-stub
   <link>static,<target-os>linux:<source>/dl//dl   
 ;
explicit sharedauth_server ;

alias sharedauth
  : sharedauth_client
    sharedauth_client-sharedauth
    sharedauth_server
  ;
