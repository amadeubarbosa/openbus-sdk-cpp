project openbus/interop/reloggedjoin ;

path-constant here : . ;

obj hello-idl : 
  $(here)/idl/hello.idl 
  /mico//mico
;

exe reloggedjoin_client
  : src/client.cpp hello-idl
    /openbus//openbus /scs//scs /logger//logger /mico//mico
    /boost//headers /boost//program_options /openssl//openssl
  : <threading>multi:<source>/boost//thread
    <include>../properties_reader/include
    <implicit-dependency>/openbus//core-idls
    <implicit-dependency>hello-idl
    <target-os>linux,<link>static:<source>/dl//dl
;

exe reloggedjoin_server
  : src/server.cpp hello-idl
    /openbus//openbus /scs//scs /logger//logger /mico//mico
    /boost//headers /boost//program_options /openssl//openssl
  : <threading>multi:<source>/boost//thread
    <include>../properties_reader/include
    <implicit-dependency>/openbus//core-idls
    <implicit-dependency>hello-idl
    <target-os>linux,<link>static:<source>/dl//dl
;

exe reloggedjoin_proxy
  : src/proxy.cpp hello-idl
    /openbus//openbus /scs//scs /logger//logger /mico//mico
    /boost//headers /boost//program_options /openssl//openssl
  : <threading>multi:<source>/boost//thread
    <include>../properties_reader/include
    <implicit-dependency>/openbus//core-idls
    <implicit-dependency>hello-idl
    <target-os>linux,<link>static:<source>/dl//dl
;

alias reloggedjoin : 
  reloggedjoin_client 
  reloggedjoin_server 
  reloggedjoin_proxy
  admin/interop_reloggedjoin_cpp_server.key 
  admin/interop_reloggedjoin_cpp_proxy.key 
;
