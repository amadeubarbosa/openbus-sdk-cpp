project openbus/interop/simple
  : requirements <include>../ <include>../../
  ;

path-constant here : . ;

obj hello-stub
  : $(here)/idl/hello.idl
  : <warnings>off
  ;
explicit hello-stub ;

obj hello-skeleton
  : $(here)/idl/hello.idl
  : <generate>skeleton
    <warnings>off
  ;
explicit hello-skeleton ;

exe simple_client
  : src/client.cpp
    /openbus//openbus
    /scs//scs
    /logger//logger
    /boost//headers
    /boost//program_options
    /openssl//openssl
    /TAO//TAO
    hello-stub
  : <threading>multi:<source>/boost//thread
    <target-os>windows:<library>/openbus//idls
    <target-os>windows:<library>/scs//scs-stub
    <dependency>hello-stub
    <implicit-dependency>hello-stub
    <link>static,<target-os>linux:<source>/dl//dl
  ;
explicit simple_client ;

exe simple_server
  : src/server.cpp
    /openbus//openbus
    /scs//scs
    /logger//logger
    /boost//headers
    /boost//program_options
    /openssl//openssl
    /TAO//TAO
    hello-stub
    hello-skeleton
  : <threading>multi:<source>/boost//thread
    <target-os>windows:<library>/openbus//idls
    <target-os>windows:<library>/scs//scs-stub
    <dependency>hello-stub
    <implicit-dependency>hello-stub
    <dependency>hello-skeleton
    <implicit-dependency>hello-skeleton
    <link>static,<target-os>linux:<source>/dl//dl   
  ;
explicit simple_server ;

alias simple
  : simple_client
    simple_server
  ;
