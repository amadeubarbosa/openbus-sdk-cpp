project openbus/interop/simple ;

path-constant here : . ;

obj hello-stub
  : $(here)/idl/hello.idl
  ;
explicit hello-stub ;

obj hello-skeleton
  : $(here)/idl/hello.idl
  : <generate>skeleton
  ;
explicit hello-skeleton ;

exe simple_client
 : src/client.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   hello-stub
 : <threading>multi:<source>/boost//thread
   <target-os>windows:<library>/openbus//idls
   <target-os>windows:<library>/scs//scs-stub
   <dependency>hello-stub
   <implicit-dependency>hello-stub
   <link>static,<target-os>linux:<source>/dl//dl
   
 ;
explicit simple_client ;

exe simple_server
 : src/server.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   hello-stub
   hello-skeleton
 : <threading>multi:<source>/boost//thread
   <target-os>windows:<library>/openbus//idls
   <target-os>windows:<library>/scs//scs-stub
   <dependency>hello-stub
   <implicit-dependency>hello-stub
   <dependency>hello-skeleton
   <implicit-dependency>hello-skeleton
   <link>static,<target-os>linux:<source>/dl//dl   
 ;
explicit simple_server ;

alias simple
  : simple_client
    simple_server
  ;
