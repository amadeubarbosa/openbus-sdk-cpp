project openbus/interop/simple ;

path-constant here : . ;

obj hello-stub
  : $(here)/idl/hello.idl
  ;

obj hello-skeleton
  : $(here)/idl/hello.idl
  : <generate>skeleton
  ;

alias idls
  : hello-stub
    hello-skeleton
  ;
explicit idls ;

exe simple_client
 : src/client.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   idls
 : <threading>multi:<source>/boost//thread
   <dependency>idls
   <implicit-dependency>idls
   <link>static,<target-os>linux:<source>/dl//dl
   
 ;
explicit simple_client ;

exe simple_server
 : src/server.cpp
   /openbus//openbus
   /boost//program_options
   /scs//scs
   /boost//headers
   /logger//logger
   /openssl//openssl
   idls
 : <threading>multi:<source>/boost//thread
   <dependency>idls
   <implicit-dependency>idls
   <link>static,<target-os>linux:<source>/dl//dl   
 ;
explicit simple_server ;

alias simple
  : simple_client
    simple_server
  ;
